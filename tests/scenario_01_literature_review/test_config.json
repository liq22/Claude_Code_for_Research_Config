{
  "scenario_name": "Literature Review Acceleration Test",
  "scenario_id": "01",
  "description": "测试文献搜索加速和缓存系统效果",
  "research_topic": "Large Language Models在科学发现中的应用",
  "objectives": [
    "测试literature-coordinator的基础搜索功能",
    "验证缓存系统对相似搜索的加速效果",
    "评估semantic search的相关性和准确度",
    "分析knowledge-graph-builder的知识图谱构建能力"
  ],
  "expected_outcomes": {
    "cache_hit_rate": ">= 70%",
    "search_speed_improvement": ">= 70%",
    "papers_found": ">= 20",
    "relevance_score": ">= 0.85"
  },
  "test_steps": [
    {
      "step": 1,
      "description": "执行初始文献搜索建立缓存",
      "command": "/agent research/literature-coordinator",
      "input": "搜索LLM在科学发现中的应用论文",
      "expected_duration": "120s"
    },
    {
      "step": 2,
      "description": "执行相似搜索测试缓存效果",
      "command": "python scripts/cache/cache_query.py similar",
      "input": "--query 'AI for scientific discovery' --limit 10",
      "expected_duration": "5s"
    },
    {
      "step": 3,
      "description": "构建知识图谱",
      "command": "/agent research/knowledge-graph-builder",
      "input": "构建LLM科学应用的知识图谱",
      "expected_duration": "180s"
    },
    {
      "step": 4,
      "description": "分析搜索模式",
      "command": "python scripts/cache/cache_query.py patterns",
      "input": "--type research_trends --days 1",
      "expected_duration": "10s"
    }
  ],
  "metrics_to_collect": [
    "execution_time_per_step",
    "cache_hit_ratio",
    "papers_discovered_count",
    "search_relevance_scores",
    "knowledge_graph_nodes_count",
    "memory_usage",
    "agent_success_rate"
  ]
}